<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4211D44"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageVW1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icget"
        android:layout_marginStart="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textVW1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Healthy On You"
        android:textSize="30sp"
        android:textColor="#fff"
        android:textStyle="normal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/imageVW1"/>

    <TextView
        android:id="@+id/textVW2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textVW1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_getStart"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_text"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_gradient"
        app:layout_constraintTop_toBottomOf="@id/textVW2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>